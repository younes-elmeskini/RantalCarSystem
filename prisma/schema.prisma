model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Car {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  type            CarType
  cover           String
  price           String
  seats           Int
  dors            Int
  transmission    Transmission
  fuelType        FuelType
  brand           Brand
  gamme           PriceRange
  quantity        Int
  airConditioning Boolean
  createdAt DateTime @default(now())
}
